{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es5",
    "module": "commonjs",
    "allowJs": true,
    "jsx": "react",
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "es6",
      "dom",
      "es2015",
      "scripthost",
      "es2016.array.include",
      "es2015.promise"
    ],
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    "test"
  ]
}